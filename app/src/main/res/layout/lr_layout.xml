<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:background="@color/colorPrimaryDark"
            android:orientation="vertical">

            <include
                layout="@layout/funding_logo"
                android:layout_width="280dp"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"></include>

            <FrameLayout
                android:id="@+id/fragment_l_conatiner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></FrameLayout>
        </LinearLayout>
        <!--  <fragment
              android:name="com.donationapp.fragments.LoginFragment"
              android:layout_width="match_parent"
              android:layout_height="match_parent"></fragment>
-->

        <FrameLayout
            android:id="@+id/fragment_r_conatiner"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"></FrameLayout>


    </LinearLayout>


</LinearLayout>